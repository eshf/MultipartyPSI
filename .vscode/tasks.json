{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build wasm",
            "type": "shell",
            "windows":{
            "command": "emcc.bat",
            "args": [
                "-I",
                "${workspaceFolder}/**",
                "${workspaceFolder}/headers/mingw64/**",
                "${workspaceFolder}/libOTe/Base/**",
                "${workspaceFolder}/headers/Common/**",
                "${workspaceFolder}/headers/Crypto/**",
                "${workspaceFolder}/headers/Network/**",
                "${workspaceFolder}/headers/Tools/**",
                "${workspaceFolder}/headers/NChooseK/**",
                "${workspaceFolder}/headers/NChooseOne/**",
                "${workspaceFolder}/headers/OPPRF/**",
                "${workspaceFolder}/headers/TwoChooseOne/**",
                "${workspaceFolder}/headers/include/**",
                "${workspaceFolder}/headers/include/emscripten/**",
                "${workspaceFolder}/headers/NTL/**",
                "${workspaceFolder}/headers/Base/**",
                "${workspaceFolder}/headers/Tools/**",
                "${workspaceFolder}/headers/NChooseK/**",
                "${workspaceFolder}/headers/NChooseOne/**",
                "${workspaceFolder}/headers/OPPRF/**",
                "${workspaceFolder}/headers/TwoChooseOne/**",
                "${workspaceFolder}/thirdparty/linux/miracl/**",
