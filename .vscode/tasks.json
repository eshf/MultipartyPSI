                "${workspaceFolder}/thirdparty/linux/boost_1_83_0/**",
                "${workspaceFolder}/thirdparty/win/**",
                "${workspaceFolder}/emscripten/**",
                "-o",
                "${workspaceFolder}/main.cpp",
                "-O3",
                "-s",
                "WASM=1",
                "-v",
                "-lsfml-audio",
                "-lsfml-graphics",
                "-lsfml-network",
                "-lsfml-system",
                "-lsfml-window",
                "-lshlwapi"
